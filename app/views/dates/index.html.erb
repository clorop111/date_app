<%= render "shared/header" %>
<div class="main">

<%#画面上部の帯%>
  <div class="title-contents">
    <h2 class="servis-title">
      日記を習慣にしてみよう
    </h2>
    <p class="servis-explain">
      何を書いたらいいかわからない方への日記です
    </p>
  </div>

<%#/画面上部の帯%>


<%#最新日記表示%>
  <div class='date-contents'>
    <h2 class="title">最新日記</h2>

    <ul class='date-lists'>

    <li class='list'>
      <div class='date-img-content'>
        <%= image_tag 'date-sample.jpeg', class: "date-img"  %>
      </div>
      <div class='date-info'>
        <h3 class='date-name'>
          <%= '日記を書いてみる' %>
        </h3>
        <div class='date-days'>
          <span><%= '2000/00/00' %></span>
          <div class='star-btn'>
            <%= image_tag "star.like.png", class:"star-icon" %>
            <span class='star-count'>0</span>
          </div>
        </div>
      </div>
    </li>
    </ul>
  </div>
<%#/最新日記表示%>

</div>


<%= render "shared/footer" %>

<div class=''></div>
